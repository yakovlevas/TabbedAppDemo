<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TabbedAppDemo.ViewModels"
             x:Class="TabbedAppDemo.Views.Tab1Page"
             Title="Tab1">

    <ContentPage.BindingContext>
        <viewmodels:Tab1ViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.svg"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <!-- Простая привязка для теста -->
            <Label
                Text="{Binding WelcomeMessage}"
                FontSize="24"
                HorizontalOptions="Center" />

            <!-- Простая кнопка для теста -->
            <Button 
                Text="Test MVVM Button"
                Command="{Binding SayHelloCommand}"
                HorizontalOptions="Center"
                Padding="20,10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>