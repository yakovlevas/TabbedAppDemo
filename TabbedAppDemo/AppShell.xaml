<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TabbedAppDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TabbedAppDemo.Views"
    xmlns:local="clr-namespace:TabbedAppDemo"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <Tab Title="Tab 1">
            <ShellContent ContentTemplate="{DataTemplate views:Tab1Page}" />
        </Tab>
        <Tab Title="Tab 2">
            <ShellContent ContentTemplate="{DataTemplate views:Tab2Page}" />
        </Tab>
        <Tab Title="Tab 3">
            <ShellContent ContentTemplate="{DataTemplate views:Tab3Page}" />
        </Tab>
        <Tab Title="Tab 4">
            <ShellContent ContentTemplate="{DataTemplate views:Tab4Page}" />
        </Tab>
    </TabBar>
</Shell>